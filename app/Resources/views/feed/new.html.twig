{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Feed creation</h1>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
        {{ form_label(form.title, 'Title', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.link, 'Link', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.link, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.category, 'Category', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.comments, 'Comments', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(form.comments, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('feed_index') }}">Back to the list</a>
        </li>
    </ul>
</div>
{% endblock %}
