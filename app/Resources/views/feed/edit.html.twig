{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Feed edit</h1>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
        {{ form_label(edit_form.title, 'Title', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.description, 'Description', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(edit_form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.link, 'Link', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(edit_form.link, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.category, 'Category', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(edit_form.category, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.comments, 'Comments', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
            {{ form_widget(edit_form.comments, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(edit_form.pub_date, 'Public Date', {'label_attr': {'class': 'required col-sm-2 control-label'}}) }}


            <div class='input-group date' id='datetimepicker1' data-date="today">
                <input type='text' class="form-control" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('feed_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
</div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker('update', new Date);
    });
</script>
{% endblock %}
